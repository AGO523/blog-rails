<!DOCTYPE html>
<html>
    <head>
    <title>AwesomeAppBlogs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../../javascript/packs/application.js"></script>

    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="../../assets/favicon.ico" />

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="../../assets/stylesheets/styles.css" rel="stylesheet" />

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary bg-opacity-50 fixed-top ">
            <div class="container">
                <a class="navbar-brand" href="/">AGO TechTeach</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <% if current_user %>
                            <li class="nav-item nav-link active"><%= current_user.email %>さん</li>
                            <li class="nav-item"><%= link_to 'アカウント編集', edit_user_registration_path, class: "nav-link" %></li>
                            <li class="nav-item"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-link" %></li>
                            <% if current_user.try(:admin?) %>
                                <li class="nav-item"><%= link_to '管理者ログイン', rails_admin_path %></li>
                            <% end %>
                        <% else %>
                            <li class="nav-item"><%= link_to 'アカウント登録', new_user_registration_path, class: "nav-link" %></li>
                            <li class="nav-item"><%= link_to 'ログイン', new_user_session_path, class: "nav-link" %></li>
                        <% end %>
                        <li class="nav-item"><a class="nav-link active" aria-current="page" href="/">Blog</a></li>
                    </ul>
                </div>
            </div>
        </nav>
  </head>

  <body>
  <%= yield %>
    <% if flash[:notice] %>
    <p>Notice: <%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
        <p>Alert: <%= flash[:alert] %></p>
    <% end %>
  </body>
</html>
