<% if @post.comments.present? %>
          <div class="card">
            <div class="card-body">
              <% @post.comments.each do |comment| %>
                <p class="fs-5 mt-3 font-monospace"><%= comment.name %></p>
                <p class="fs-6 mb-6"><%= comment.content %></p>
                <div class="row border-bottom"></div>
              <% end %>
            </div>
          </div>
        <% end %>
        <%= form_with(model: [@post, @comment], local: true) do |form| %>
          <div class="row">
            <%= form.label :name %>
            <%= form.hidden_field :post_id, value: @post.id %>
            <%= form.text_field :name, class: "form-control" %>
          </div>
          <div class="row">
            <%= form.label :content %>
            <%= form.hidden_field :post_id, value: @post.id %>
            <%= form.text_area :content, class: "form-control mb-4" %>
          </div>
          <div class="row">
            <div class="actions">
              <%= form.submit "コメントする", class: "btn btn-outline-primary" %>
            </div>
          </div>
        <% end %>
