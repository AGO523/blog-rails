<p id="notice"><%= notice %></p>

<div class="container mt-5">
  <div class="row">
    <div class="col-lg-8">
      <article>
          <header class="mb-4 mt-5">
              <h1 class="fw-bolder mb-1"><%= @post.title %></h1>
              <div class="text-muted fst-italic mb-2"><%= @post.updated_at.to_s(:datetime_jp) %></div>
              <a class="badge bg-secondary text-decoration-none link-light" href="#!">Web Design</a>
              <a class="badge bg-secondary text-decoration-none link-light" href="#!">Freebies</a>
              <%= render 'posts/tag_list', tag_list: @post.tag_list %>
          </header>
          <figure class="mb-4"><%= image_tag @post.top_image.variant(resize_to_fit: [414, 700]).processed %></figure>
          <section class="mb-5">
            <p class="fs-5 mb-4"><%= @post.cotent %></p>
          </section>
        </article>
        <% if @post.comments.present? %>
          <div class="card">
            <div class="card-body">
              <% @post.comments.each do |comment| %>
                <p class="fs-5 mt-3 font-monospace"><%= comment.name %></p>
                <p class="fs-6 mb-6"><%= comment.content %></p>
                <div class="row border-bottom"></div>
              <% end %>
            </div>
          </div>
        <% end %>
        <%= form_with(model: [@post, @comment], local: true) do |form| %>
          <div class="row">
            <%= form.label :name %>
            <%= form.hidden_field :post_id, value: @post.id %>
            <%= form.text_field :name, class: "form-control" %>
          </div>
          <div class="row">
            <%= form.label :content %>
            <%= form.hidden_field :post_id, value: @post.id %>
            <%= form.text_area :content, class: "form-control mb-4" %>
          </div>
          <div class="row">
            <div class="actions">
              <%= form.submit "コメントする", class: "btn btn-outline-primary" %>
            </div>
          </div>
        <% end %>
    </div>
      <div class="col-lg-4">
        <%= render partial: "side_widget" %>
      </div>
  </div>
</div>
<% if @post.user_id == current_user.id %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>
